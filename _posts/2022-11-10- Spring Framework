    @GetMapping
    public String getMessage() {  // Frameworkë¥¼ ì‚¬ìš©í•˜ëŠ” ë¶€ë¶„
        String message = "hello world";
        return StringUtils.upperCase(message); // Libraryë¥¼ ì‚¬ìš©í•˜ëŠ” ë¶€ë¶„
    }

    public static void main(String[] args) {
        SpringApplication.run(SampleApplication.class, args);
    }
